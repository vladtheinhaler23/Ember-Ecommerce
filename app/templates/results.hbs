<div class="row">
  {{#each model as |result|}}
  <div class="col s4">
    <div class="card large">
      <div class="card-image waves-effect waves-block waves-light">
        <img class="activator" src="{{result.artworkUrl100}}">
      </div>
      <div class="card-content">
        <span class="card-title activator grey-text text-darken-4">{{result.artistName}}<i class="material-icons right">more_vert</i></span>
        <p>{{result.trackName}}</p>
      </div>
      <div class="card-reveal">
        <span class="card-title grey-text text-darken-4"><i class="material-icons right">close</i></span>
        <audio controls>
          <source src="{{result.previewUrl}}" type="audio/mpeg">
            Your browser does not support the audio tag.
          </audio>
        </div>
      </div>
    </div>

    {{/each}}
  </div>
