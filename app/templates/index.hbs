
<div class="container">
  <h1 class="center">iTunes Search</h1>
  <h2 class="center">Search your favorite artist on iTunes</h2>

  {{lookup-form dispLookup="dispLookup"}}
</div>
{{#if session.isAuthenticated}}
  Logged in as {{session.currentUser.displayName}}
  <button {{action "signOut"}}>Sign out</button>
